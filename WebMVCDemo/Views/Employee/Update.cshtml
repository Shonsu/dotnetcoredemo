@model Employee
<form method="post" asp-controller="Employee" asp-action="Update">
    <div class="form-group row">
        <label asp-for="FirstName" class="col-sm-2 col-form-label">FirstName:</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="FirstName" /><br />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="LastName" class="col-sm-2 col-form-label">LastName:</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="LastName" /><br />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="DateHired" class="col-sm-2 col-form-label">DateHired:</label>
        <div class="col-sm-10">

            @*<input class="form-control" name="DateHired" type="date" value="@Model.DateHired.ToString("yyyy-MM-dd")" /><br />*@
            <input class="form-control" asp-for="DateHired" /><br />

        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Department" class="col-sm-2 col-form-label">Department:</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Department" /><br />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="SupervisorId" class="col-sm-2 col-form-label">Supervisor</label>
        <div class="col-sm-10">
            <select asp-for="SupervisorId" asp-items="ViewBag.Supervisors" ></select><br />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">UPDATE</button>
        </div>
    </div>
</form>