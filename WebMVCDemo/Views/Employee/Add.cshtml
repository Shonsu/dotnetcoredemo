<form method="post" asp-controller="Employee" asp-action="Add">
    <div class="form-group row">
            <label for="FirstName" class="col-sm-2 col-form-label">FirstName:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="FirstName" /><br />
            </div>
        </div>
        <div class="form-group row">
            <label for="LastName" class="col-sm-2 col-form-label">LastName:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="LastName" /><br />
            </div>
        </div>
        <div class="form-group row">
            <label for="DateHired" class="col-sm-2 col-form-label">DateHired:</label>
            <div class="col-sm-10">
                <input type="date" class="form-control" name="DateHired" /><br />
            </div>
        </div>
        <div class="form-group row">
            <label for="Department" class="col-sm-2 col-form-label">Department:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="Department" /><br />
            </div>
        </div> 
        <div class="form-group row">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">ADD</button>
            </div>
        </div>
</form>